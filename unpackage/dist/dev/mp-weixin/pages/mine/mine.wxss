
page {
		width: 100%;
		height: 100%;
		background: -webkit-gradient(linear, left top, left bottom, from(#ffffff), to(#94bff8));
		background: -o-linear-gradient(#ffffff, #94bff8);
		background: linear-gradient(#ffffff, #94bff8);
		overflow: hidden;
}
view, text {
		-webkit-box-sizing: border-box;
		        box-sizing: border-box;
}
.body {
		width: 100%;
		height: 100%;
		overflow-y: scroll;
		padding-bottom: 20rpx;
		overflow-x: hidden;
}
.body::-webkit-scrollbar {
		width: 0;
		height: 0;
		color: transparent;
}

